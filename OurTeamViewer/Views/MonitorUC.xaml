<UserControl x:Class="OurTeamViewer.MonitorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OurTeamViewer"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="250" Width="250" Height="250" Background="White">
    <Grid>
        <TextBlock VerticalAlignment="Top" FontSize="22" HorizontalAlignment="Center" Text="{Binding Title}" ></TextBlock>
        <Image Source="{Binding ImageUrl,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="200" Height="200" ></Image>
    </Grid>
</UserControl>
